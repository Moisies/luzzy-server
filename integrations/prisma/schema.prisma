generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  phone             String     @id()
  registrationToken String     @unique
  Messages          Messages[]
  settings          Json?
}

enum Direction {
  IN
  OUT
}

model Messages {
  id                String    @id()
  user              User      @relation(fields: [registrationToken], references: [registrationToken])
  registrationToken String
  direction         Direction
  message           String
  date              DateTime
}
